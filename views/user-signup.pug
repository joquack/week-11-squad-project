extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/users/signup' method='post' class='form login-form')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Username', 'username', user.username)
    +field('First Name', 'firstName', user.firstName)
    +field('Last Name', 'lastName', user.lastName)
    +field('Email Address', 'email', user.email)
    +field('Password', 'password', user.password, 'password')
    +field('Confirm Password', 'confirmPassword', '', 'password')
    div(class='submit-cancel-btns')
      button(type='submit' class='btn create-account-btn') Create Account
      a(href='/' class='btn cancel-btn') Cancel
    div
      a(href='/users/login' class='no-account-btn') Already have an account?
