extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)

  form(class='login-form' action='/users/login' method='post')


    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email Address', 'email', email)
    +field('Password', 'password', null, 'password')
    div(class='submit-cancel-btns')
      button(type='submit' class='btn login-btn') Login
      a(href='/' class='btn cancel-btn') Cancel
    div
      a(href='/users/signup' class=no-account-btn) Don't have an account?
